<h1>All Articles</h1>

<%= link_to 'Create New Article', new_article_path %>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
      </tr>
    <% end %>
  </tbody>

</table>